package com.s4.member.service;

import org.springframework.stereotype.Service;

import com.s4.member.dto.AccountPDto;
import com.s4.member.mapper.AccountPMapper;

import lombok.Setter;

@Service
public class AccountPServiceImpl implements AccountPService{

	@Setter
	private AccountPMapper accountPMapper;
	
	@Override
	public void register(AccountPDto accountP) {
		
		accountPMapper.insertAccountP(accountP);
	}

	@Override
	public AccountPDto login(AccountPDto accountP) {
		
		AccountPDto loginUser = accountPMapper.selectAccountP(accountP.getP_id(), accountP.getP_pw()); 
		
		return loginUser;
	} 
 
}
